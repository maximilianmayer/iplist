<% @title = "IP details @ips.address "%>
<h2>IP details </h2>
<p><%= link_to "back", :action => "index" %></p>
<% form_for :ipaddress, :url => {:action => "update", :id => @ips.id } do |f| %>
  <div class="item">
    <div class="item_label" for="ipaddress_hostname">Hostname</div>
    <%= f.text_field :hostname , :value => @ips.hostname %>
  </div>
  <div class="item">
    <div class="item_label" for="ipaddress_address">IP Address</div>
    <%= f.text_field :address , :value => @ips.address  %>
  </div>
  <div class="item">
    <div class="item_label" for="ipaddress_subnet">IP subnet</div>
    <%= f.text_field :subnet , :value => @ips.subnet, :class => "item_content_subnet" %>
  </div>
  <div class="item">
    <div class="item_label" for="ipaddress_type">type</div>
    <%= f.text_field :iptype , :value => @ips.iptype , :class => "item_content_type" %>
  </div>
  <div class="item">
    <div class="item_label" for="ipaddress_comment">comment</div>
    <%= f.text_field :comment ,  :value => @ips.comment %>
  </div>
  <%= submit_tag "save" %>
<% end %>
